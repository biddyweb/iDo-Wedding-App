<h2>Manage RSVPs</h2>

<%- rsvped, not_rsvped = @guests.partition {|g| g.has_rsvped?} -%>

<h3>Haven’t yet RSVP’d</h3>
<%- for guest in not_rsvped -%>
	<div class="admin-manage-rsvp-box no-rsvp">
		<h3><%= guest.full_name %></h3>
    <%= link_to('RSVP for them', new_admin_guest_rsvp_path(guest)) %>
	</div>
<%- end -%>

<%- coming, not_coming = rsvped.partition {|g| g.is_attending?} -%>

<h3>Attending</h3>
<%- for guest in coming -%>
	<div class="admin-manage-rsvp-box rsvp-attending">
		<h3><%= guest.full_name %></h3>
    <%= number_attending_content(guest.rsvp) %>

  	<%- if @admin_user -%>
  		<h3>This guest was<%= ' NOT' unless guest.rsvp.admin_rsvp? %> registered by an Admin.</h3>
  	<%- end -%>
  	
    <%= link_to('Update', edit_admin_guest_rsvp_path(guest)) %>
	</div>
<%- end -%>

<h3>Not Attending</h3>
<%- for guest in not_coming -%>
	<div class="admin-manage-rsvp-box rsvp-not-attending">
		<h3><%= guest.full_name %></h3>
		<p>No, I’m sorry, <%= guest.rsvp.one? ? 'I' : 'we' %> won’t be able to attend.</p>

  	<%- if @admin_user -%>
  		<h3>This guest was<%= ' NOT' unless guest.rsvp.admin_rsvp? %> registered by an Admin.</h3>
  	<%- end -%>

    <%= link_to('Update', edit_admin_guest_rsvp_path(guest)) %>
	</div>
<%- end -%>
